set number
set showcmd
set cursorline
set mouse=a
syntax enable
colorscheme slate 

set t_Co=256
set background=dark
highlight Normal ctermbg=NONE
highlight nonText ctermbg=NONE

set smarttab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set expandtab

set lbr

set ai
set si
set wrap

set lazyredraw

set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>
set showmatch

nnoremap j gj
nnoremap k gk

nnoremap B ^
nnoremap E $

nnoremap $ <nop>
nnoremap ^ <nop>

nnoremap jk <esc>
